<!-- Include head content -->
<%- include('include/_head') %>
    <!-- Main -->
    <div class="container">
      <header class="profile-header" style="margin-bottom: 20px;">
        <div class="top-bar">
          <img src="<%= user.photo %>" class="profile-photo" />
          <div class="deets">Logged in as <u><%= user.email %></u></div>
          <a class="logout" href="/logout"
            ><i class="material-icons-round">logout</i>Log out</a
          >
          <a class="profile-button" href="/profile"
            ><i class="material-icons-round">person</i>Go to profile</a
          >
        </div>
      </header>
      <section class="form-content">
        <h1 class="form-title">Add Track to your playlist.</h1>
        <p class="form-desc">
          Type in the track name and its artist, along with your rating to add
          the track to your favourite playlist (•‿•)
        </p>
        <div class="form">
          <form autocomplete="off">
            <div class="form-group">
              <label for="track_name">Track Name:</label>
              <input type="text" name="track_name" required />
            </div>
            <div class="form-group">
              <label for="track_artist">Track Artist:</label>
              <input type="text" name="track_artist" required />
            </div>
            <div class="form-group">
              <label for="track_rating" style="display: inline-block"
                >Star rating:</label
              >
              <div class="star-rating">
                <li>
                  <input type="radio" name="stars" value="1" />
                  <label for="1-star"
                    >1 star -
                    <i class="material-icons-round star-icon"
                      >star_rate</i
                    ></label
                  >
                </li>
                <li>
                  <input type="radio" name="stars" value="2" />
                  <label for="2-star">
                    2 stars - <% for(var i = 0; i < 2; i++) { %>
                    <i class="material-icons-round star-icon">star_rate</i>
                    <% } %>
                  </label>
                </li>
                <li>
                  <input type="radio" name="stars" value="3" />
                  <label for="3-star">
                    3 stars - <% for(var i = 0; i < 3; i++) { %>
                    <i class="material-icons-round star-icon">star_rate</i>
                    <% } %>
                  </label>
                </li>
                <li>
                  <input type="radio" name="stars" value="4" />
                  <label for="4-star">
                    4 stars - <% for(var i = 0; i < 4; i++) { %>
                    <i class="material-icons-round star-icon">star_rate</i>
                    <% } %>
                  </label>
                </li>
                <li>
                  <input type="radio" name="stars" value="5" />
                  <label for="5-star">
                    5 stars - <% for(var i = 0; i < 5; i++) { %>
                    <i class="material-icons-round star-icon">star_rate</i>
                    <% } %>
                  </label>
                </li>
              </div>
            </div>
            <div class="error_output"></div>
            <button id="add_track">Add new track</button>
          </form>
        </div>
      </section>
    </div>
    <!-- /Main -->
    <script src="js/addTrack.js"></script>
  </body>
</html>