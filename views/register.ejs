<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Playlistify - Register</title>
</head>
<body>
    <!-- Header -->
    <header id="header">
        <nav>
            <div class="container">
                <h1>Register with Playlistify!</h1>
            </div>
        </nav>
    </header>
    <!-- /Header -->
    <!-- Main -->
    <div class="container">
        <div class="form">
            <form autocomplete="off">
                <div class="form_group">
                    <label for="email">Email</label>
                    <input type="text" class="register-input" name="email" required/>
                    <div class="email error"></div>
                </div>
                <div class="form_group">
                    <label for="username">Username</label>
                    <input type="text" class="register-input" name="username" required/>
                    <div class="username error"></div>
                </div>
                <div class="form_group">
                    <label for="username">Profile photo URL</label>
                    <input type="text" class="register-input" name="photo" required/>
                </div>
                <div class="form_group">
                    <label for="password">Password</label>
                    <input type="password" class="register-input" name="password" required/>
                    <div class="password error"></div>
                </div>
                <button id="register_user">Create account</button>
            </form>
        </div>
    </div>
    <!-- /Main -->
    <script src="js/register.js"></script>
</body>
</html>